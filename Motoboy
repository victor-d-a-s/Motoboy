    <script>
        $(document).ready(function(){ $('#cad-zap').mask('(00) 00000-0000'); });

        // --- NAVEGA√á√ÉO ENTRE ABAS ---
        function mudarAba(abaNome) {
            // Esconde todas
            ['cadastro', 'tutorial', 'calc'].forEach(aba => {
                document.getElementById('aba-' + aba).classList.add('hidden');
                document.getElementById('btn-' + aba).classList.remove('bg-gray-700', 'text-white');
                document.getElementById('btn-' + aba).classList.add('text-gray-400');
            });

            // Mostra a escolhida
            document.getElementById('aba-' + abaNome).classList.remove('hidden');
            const btnAtivo = document.getElementById('btn-' + abaNome);
            btnAtivo.classList.remove('text-gray-400');
            btnAtivo.classList.add('bg-gray-700', 'text-white');
        }

        // --- FUN√á√ÉO DE CADASTRO ---
        function enviarCadastro() {
            const nome = document.getElementById('cad-nome').value;
            const zap = document.getElementById('cad-zap').value;
            const moto = document.getElementById('cad-moto').value;
            const turno = document.getElementById('cad-turno').value;

            if(!nome || !zap) { alert("Preencha pelo menos Nome e WhatsApp!"); return; }

            // SEU N√öMERO AQUI (Para receber os cadastros)
            const numAdmin = "5511999999999"; 

            const texto = `üèçÔ∏è *NOVO CADASTRO DE MOTOBOY*%0A%0A` +
                          `üë§ *Nome:* ${nome}%0A` +
                          `üì± *Zap:* ${zap}%0A` +
                          `üõµ *Moto:* ${moto}%0A` +
                          `üïí *Turno:* ${turno}%0A%0A` +
                          `_Quero entrar para a equipe Flash!_`;

            window.open(`https://wa.me/${numAdmin}?text=${texto}`, '_blank');
        }

        // --- CALCULADORA ---
        let total = 0;
        let qtd = 0;

        function somarCorrida() {
            const input = document.getElementById('valor-corrida');
            // Aceita tanto ponto quanto virgula
            let valorTexto = input.value.replace(',', '.');
            let valor = parseFloat(valorTexto);

            if(!valor || isNaN(valor)) {
                alert("Digite um valor v√°lido!");
                return;
            }

            total += valor;
            qtd++;

            // Atualiza Tela
            document.getElementById('total-ganho').innerText = total.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
            document.getElementById('qtd-corridas').innerText = qtd;
            
            // Limpa input e foca
            input.value = '';
            input.focus();
        }

        function limparCalculadora() {
            if(confirm("Tem certeza que quer zerar o dia?")) {
                total = 0;
                qtd = 0;
                document.getElementById('total-ganho').innerText = "R$ 0,00";
                document.getElementById('qtd-corridas').innerText = "0";
            }
        }
    </script>
